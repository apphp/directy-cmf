<?xml version="1.0" encoding="utf-8"?>
<install version="1.0" type="module">
    <name>Setup</name>
    <description>Setup module allows to install application using web installation wizard</description>
    <version>0.1.0</version>
    <creationDate>01/02/2013</creationDate>
    <lastChangedDate>10.09.2015</lastChangedDate>
    <author>ApPHP</author>
    <authorEmail>info@apphp.com</authorEmail>
    <authorUrl>http://www.apphp.com</authorUrl>
    <copyright>ApPHP</copyright>
    <license>LGPL</license>
    <manual></manual>
    <icon>assets/modules/setup/images/icon.png</icon>
    <moduleType>system</moduleType>
    <code>setup</code>
    <files>
        <filename>info.xml</filename>
        <config>
            <filename>main.php</filename>
        </config>
        <data>
            <install>install.mysql.sql</install>
            <update></update>
            <uninstall>uninstall.mysql.sql</uninstall>
        </data>
        <images installationPath="assets/modules/setup/images/" byDirectory="true">
            <filename>icon.png</filename>
        </images>
        <templates movingPath="templates/setup/">
            <css>
                <filename>main.css</filename>    
            </css>
            <images>
                <filename>wizard.png</filename>    
            </images>
            <filename>default.php</filename>
        </templates>
        <controllers>
            <filename>SetupController.php</filename>
        </controllers>
        <models>
            <filename>Setup.php</filename>
        </models>
        <messages exclude="yes">
            <de>
                <filename>setup.php</filename>
            </de>
            <en>
                <filename>setup.php</filename>
            </en>
            <es>
                <filename>setup.php</filename>
            </es>
        </messages>
        <views>
            <error>
                <filename>index.php</filename>
            </error>
            <setup>
                <filename>administrator.php</filename>
                <filename>completed.php</filename>
                <filename>database.php</filename>
                <filename>error.php</filename>
                <filename>index.php</filename>
                <filename>ready.php</filename>
            </setup>
        </views>
    </files>
</install>